<% provide(:title, @event.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        "<%= @event.name %>"
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <h3>Location : <%= @event.location %></h3>
    <h3>Date : <%= @event.eventdate %></h3>
    <h3><u> Creator : <%= @event.creator.username %> </u></h3>
    <h3> Attendees</h3>
    <% if not @attendees.nil? %>
      <% @attendees.each do |attendee| %>
        <li>
          <%=  attendee.username %>
        </li>
      <% end %>
    <% end %>
    <%= link_to attended_events_create_path(:event => @event.id), method: :post do %>
      <button class="btn btn primary"> Attend this event</button>
    <%end%>
  </button>
</a>
</div>
</div>
