<% provide(:title, @event.name) %>

<div class="row">

  <aside class="col-md-4">
    <section class="user_info">
      <h1>
       
        "<%= @event.name %>"
      </h1>
    </section>
  </aside>

  <div class="col-md-8">
    
      <h3>Location : <%= @event.location %></h3>
      <h3>Date : <%= @event.eventdate %></h3>
      <h3><u> Creator : <%= @event.creator.username %> </u></h3>
      
  </div>

</div>