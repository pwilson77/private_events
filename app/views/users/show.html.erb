<% provide(:title, "show page") %>

<div class="row">

  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= @user.username %>
      </h1>
    </section>
  </aside>

  <div class="col-md-8">
    <% if not @created_events.nil? %>
        <h3> Created (<%= @created_events.count %>) events</h3>
        
        <ul class="list-group list-group-flush">
        
                <% @created_events.each do |event| %>
                    <li class="list-group-item">
                        <b> <%= event.name %> </b>
                        
                    </li>
                <% end %>
        </ul>


        <%= will_paginate @created_events %>
    <% end %>
  </div>

</div>

